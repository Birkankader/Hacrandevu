# 2captcha.com API anahtarı (reCAPTCHA otomatik çözüm için zorunlu)
CAPTCHA_API_KEY=

# Otomasyon görünüm ayarı (VPS ortamında veya arkaplanda true olmalıdır)
HEADLESS=true

# Session yönetimi (dakika — boşta kalan oturum bu süre sonunda kapanır)
SESSION_IDLE_TIMEOUT_MINUTES=10

# Playwright maksimum sayfa yükleme süresi (milisaniye)
PAGE_TIMEOUT_MS=45000

# Kayıtlar için ekran görüntüsü kaydedilip kaydedilmeyeceği
SAVE_SCREENSHOT=true

# reCAPTCHA başarısız olursa maksimum deneme sayısı
RECAPTCHA_MAX_RETRIES=3
